<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".EditProfileTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Your Profile"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#30ff"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Name"
            android:inputType="text"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Phone Number"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/TeacherId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Teacher ID"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Address"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/roomNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Room No"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Educations"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="#30ff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:gravity="left"/>
        <EditText
            android:id="@+id/graduation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Graduation"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/masters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="Masters"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/phd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            android:padding="20dp"
            android:hint="PhD"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/designationDropDownLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Designation">

            <AutoCompleteTextView
                android:id="@+id/designationDropDownTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="25dp"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Update"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="17dp"
            android:textSize="16dp"
            />
    </LinearLayout>

</ScrollView>